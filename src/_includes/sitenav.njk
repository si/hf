{% set currentUrl = page.url %}
<nav class="tdbc-sitenav">
  <div class="tdbc-sitenav__container">
    <a id="tdbc-siteid" href="/" {% if currentUrl === '/' %} aria-current="page" {% endif %}>{{ meta.siteName }}</a>
    <ul role="list" class="tdbc-sitenav__navlist tdbc-list-unstyled">
      {% for link in collections.pages %}
        <li>
          <a {% if currentUrl === link.url %} aria-current="page" {% endif %} href="{{ link.url }}" title="{{ link.title }}">
            {{ link.data.linkText }}
          </a>
        </li>
      {%- endfor %}
      <li>
        <a href="https://housefinesse.teemill.com/" target="_blank" rel="noopener noreferrer">Shop</a>
      </li>
    </ul>
  </nav>